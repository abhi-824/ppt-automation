{
	"compilerOptions": {
		"target": "es2021",
		"lib": ["es2021"],
		"jsx": "react-jsx",
		"module": "es2022",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": false,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"esModuleInterop": true
	},
	"include": ["worker-configuration.d.ts", "src/**/*.ts"]
}
